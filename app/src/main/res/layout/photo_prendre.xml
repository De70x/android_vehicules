<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent">

    <Button
        android:id="@+id/prendre_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintTop_toTopOf="@id/parent"
        android:text="@string/prendre_une_photo"/>

    <ImageView
        android:id="@+id/photo_affichee"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintTop_toBottomOf="@id/prendre_photo"
        app:layout_constraintHeight_percent="50"
        android:layout_height="wrap_content"
        android:layout_width="0dp" />

    <Button
        android:id="@+id/save_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/parent"
        app:layout_constraintRight_toRightOf="@id/parent"
        app:layout_constraintTop_toBottomOf="@id/photo_affichee"
        android:text="@string/enregistrer_la_photo"/>

</androidx.constraintlayout.widget.ConstraintLayout>